# Production Environment Variables

# Application
# Название приложения
APP_NAME=Tomorrow
# Окружение приложения (production, development и т.д.)
APP_ENV=production
# Включить/выключить режим отладки
APP_DEBUG=false
# Базовый URL приложения
APP_URL=https://tomorrow.example.com
# Порт, на котором запускается приложение
APP_PORT=8080
# Секретный ключ приложения
APP_SECRET=supersecretkey

# Database
# Хост базы данных
DB_HOST=prod-db.example.com
# Порт базы данных
DB_PORT=5432
# Имя базы данных
DB_DATABASE=tomorrow_prod
# Имя пользователя базы данных
DB_USERNAME=tomorrow_user
# Пароль пользователя базы данных
DB_PASSWORD=securepassword
# Использовать SSL для подключения к базе данных
DB_SSL=true
# Размер пула соединений с базой данных
DB_POOL_SIZE=20

# Redis
# Хост Redis
REDIS_HOST=prod-redis.example.com
# Порт Redis
REDIS_PORT=6379
# Пароль Redis
REDIS_PASSWORD=redispassword
# Номер базы Redis
REDIS_DB=0
# Использовать TLS для Redis
REDIS_TLS=true

# Mail
# Драйвер для отправки почты (smtp, sendmail и т.д.)
MAIL_DRIVER=smtp
# Хост SMTP сервера
MAIL_HOST=smtp.example.com
# Порт SMTP сервера
MAIL_PORT=465
# Имя пользователя SMTP
MAIL_USERNAME=mailer@example.com
# Пароль SMTP
MAIL_PASSWORD=mailpassword
# Тип шифрования SMTP (ssl, tls и т.д.)
MAIL_ENCRYPTION=ssl
# Email отправителя
MAIL_FROM_ADDRESS=info@example.com
# Имя отправителя
MAIL_FROM_NAME=Tomorrow

# Logging
# Уровень логирования (info, warn, error и т.д.)
LOG_LEVEL=warn
# Путь к файлу логов
LOG_PATH=/var/log/tomorrow/app.log
# Максимальный размер файла логов (в байтах)
LOG_MAX_SIZE=10485760
# Включить ротацию логов
LOG_ROTATE=true

# Security
# Включить CORS
ENABLE_CORS=true
# Разрешённые источники для CORS
CORS_ORIGIN=https://tomorrow.example.com
# Включить лимитирование запросов
ENABLE_RATE_LIMIT=true
# Окно времени для лимитирования (в секундах)
RATE_LIMIT_WINDOW=60
# Максимальное количество запросов за окно времени
RATE_LIMIT_MAX=1000
# Включить двухфакторную аутентификацию
ENABLE_2FA=true

# Third-party APIs
# Ключ Google API
GOOGLE_API_KEY=prod-google-api-key
# DSN для Sentry
SENTRY_DSN=https://sentry.io/your-dsn
# Секретный ключ Stripe
STRIPE_SECRET_KEY=sk_live_1234567890
# Публичный ключ Stripe
STRIPE_PUBLIC_KEY=pk_live_0987654321
# Ключ API SendGrid
SENDGRID_API_KEY=SG.xxxxxxxx

# Feature Flags
# Включить бета-режим
IS_BETA_ENABLED=false
# Включить аналитику
ENABLE_ANALYTICS=true
# Включить email-уведомления
ENABLE_EMAIL_NOTIFICATIONS=true
# Включить push-уведомления
ENABLE_PUSH_NOTIFICATIONS=true
# Включить кэширование
ENABLE_CACHE=true

# File Storage
# Драйвер хранения файлов (например, s3)
STORAGE_DRIVER=s3
# Название S3 bucket
S3_BUCKET=tomorrow-prod-bucket
# Регион S3
S3_REGION=us-east-1
# ID ключа доступа S3
S3_ACCESS_KEY_ID=AKIAxxxxxxxxxxxx
# Секретный ключ доступа S3
S3_SECRET_ACCESS_KEY=xxxxxxxxxxxxxxxxxxxx

# Monitoring
# Включить мониторинг Prometheus
ENABLE_PROMETHEUS=true
# Порт для Prometheus
PROMETHEUS_PORT=9090

# Misc
# Максимальный размер загружаемого файла (в МБ)
MAX_UPLOAD_SIZE_MB=50
# Время жизни сессии (в секундах)
SESSION_TTL=86400
# Время жизни JWT токена (в секундах)
JWT_EXPIRATION=3600
# Разрешённые типы файлов для загрузки
ALLOWED_FILE_TYPES=jpg,png,pdf,docx
# Включить режим обслуживания
MAINTENANCE_MODE=false
